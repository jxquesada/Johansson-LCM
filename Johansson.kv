<HomeBoxLayout>
    orientation: "horizontal"
    canvas.before:
        Color:
            rgba: app.backgoundColorDarkLv10#
        Rectangle:
            pos: self.pos
            size: self.size

    canvas.after:
        Color:
            rgba:app.textColor
        Line:
            points: (10,self.height*0.6,240,self.height*0.6)

    BoxLayout:
        orientation: "vertical"
        size_hint: None, 1
        width: "250dp"
        BoxLayout:
            padding: "20dp"
            size_hint: 1,0.5
            Image:
                source: "icons/LCM_logo.png"
                
        Label:
            text: root.temperatureText
            size_hint: 1, 0.5
            color: app.textColor
            #background_color: backgoundColorDarkLv1
        
        ScrollView:
            BoxLayout:

                orientation: "vertical"
                size_hint: 1, None
                height: "300dp"
                pos_hint: { "center": 1 }
                        
                Button:
                    text: "Calibrar Bloques"
                    background_normal: ''
                    color: app.textColor
                    background_color: app.menuButtonColor

                    on_press: root.blocksCalibrationButton_click(current_menu_page)
                    
                Button:
                    text: "Resultados"
                    size_hint: 1, 1
                    background_normal: ''
                    color: app.textColor
                    background_color: app.menuButtonColor

                    on_press: root.resultsButton_click(current_menu_page)

                Button:
                    text: "Patrones"
                    background_normal: ''
                    color: app.textColor
                    background_color: app.menuButtonColor

                    on_press: root.patternsButton_click(current_menu_page)
                Button:
                    text: "Usuarios"
                    background_normal: ''
                    color: app.textColor
                    background_color: app.menuButtonColor

                    on_press: root.usersButton_click(current_menu_page)
                    on_press: print("hello")
                Button:
                    text: "Configuracion"
                    color: 1, 1, 1, 1
                    size_hint: 1, 1
                    background_normal: ''
                    color: app.textColor
                    background_color: app.menuButtonColor

                    on_release: root.configurationButton_click(current_menu_page)
                    

        Label:
            canvas.before:
                Color:
                    rgba: app.backgoundColorDarkLv10#
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 1, 0.3
            color: app.textColor
            text: "Comparador de Bloques\n                LCM\n         Version "+Version 
    
    BoxLayout:
        orientation: "vertical"
        # canvas.before:
        #     Color:
        #         rgba: root.backgoundColorDarkLv30#
        #     Rectangle:
        #         pos: self.pos
        #         size: self.size
        Label:
            #id: selectedSection_title
            text: root.selectedButtonName
            size_hint: 1, 0.1
            color: app.textColor
            canvas.before:
                Color:
                    rgba: app.backgoundColorDarkLv20#
                Rectangle:
                    pos: self.pos
                    size: self.size
            
        
        # ScrollView:
        #     RelativeLayout:
        #         pos: self.pos
        #         canvas.before:
        #             Color:
        #                 rgba: backgoundColorDarkLv3
        #             Rectangle:
        #                 pos: self.pos
        #                 size: self.size       
        #         # ConfigurationPageLayout:
        #         #     opacity: root.ConfigurationPageOpacity
        #         # UsersPageLayout:
        #         #     opacity: root.UsersPageOpacity
        HomeMenuPageManager:
            id: current_menu_page
            UsersPageLayout:
                name: "UsersPage"
            ConfigurationPageLayout:
                name: "ConfigurationPage"
            CalibrationPageLayout:
                name: "CalibrationPage"
            ResultsPageLayout:
                name: "ResultsPage"
            PatternsPageLayout:
                name: "PatternsPage"
 
                    
            



